<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="DeviceReport" pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20" rightMargin="20"
              topMargin="20" bottomMargin="20">
    
    <property name="com.jasperassistant.designer.GridSnap" value="false"/>
    <property name="com.jasperassistant.designer.SnapToGuides" value="true"/>
    
    <!-- Параметры отчета -->
    <parameter name="reportTitle" class="java.lang.String"/>
    <parameter name="generatedBy" class="java.lang.String"/>
    
    <!-- Поля данных из DeviceReportDto -->
    <field name="title" class="java.lang.String"/>
    <field name="type" class="java.lang.String"/>
    <field name="power" class="java.lang.Double"/>
    <field name="active" class="java.lang.Boolean"/>
    <field name="roomTitle" class="java.lang.String"/>
    <field name="modeTitle" class="java.lang.String"/>
    
    <!-- Заголовок отчета -->
    <title>
        <band height="100">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Отчет об устройствах умного дома]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="40" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="14"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{reportTitle}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="70" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12"/>
                </textElement>
                <textFieldExpression><![CDATA["Сгенерировано: " + new java.util.Date() + " | " + $P{generatedBy}]]></textFieldExpression>
            </textField>
            <line>
                <reportElement x="0" y="95" width="555" height="1"/>
            </line>
        </band>
    </title>
    
    <!-- Заголовки колонок -->
    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement x="0" y="0" width="150" height="30" backcolor="#E0E0E0"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Название]]></text>
            </staticText>
            <staticText>
                <reportElement x="150" y="0" width="80" height="30" backcolor="#E0E0E0"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Тип]]></text>
            </staticText>
            <staticText>
                <reportElement x="230" y="0" width="80" height="30" backcolor="#E0E0E0"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Мощность]]></text>
            </staticText>
            <staticText>
                <reportElement x="310" y="0" width="80" height="30" backcolor="#E0E0E0"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Статус]]></text>
            </staticText>
            <staticText>
                <reportElement x="390" y="0" width="85" height="30" backcolor="#E0E0E0"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Комната]]></text>
            </staticText>
            <staticText>
                <reportElement x="475" y="0" width="80" height="30" backcolor="#E0E0E0"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Режим]]></text>
            </staticText>
        </band>
    </columnHeader>
    
    <!-- Детали (данные) -->
    <detail>
        <band height="25">
            <textField>
                <reportElement x="0" y="0" width="150" height="25"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{title}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="0" width="80" height="25"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{type}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="230" y="0" width="80" height="25"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{power} + " Вт"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="310" y="0" width="80" height="25"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{active} ? "Вкл" : "Выкл"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="390" y="0" width="85" height="25"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{roomTitle}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="475" y="0" width="80" height="25"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{modeTitle}]]></textFieldExpression>
            </textField>
            
            <!-- Разделительная линия -->
            <line>
                <reportElement x="0" y="24" width="555" height="1"/>
            </line>
        </band>
    </detail>
    
    <!-- Итоговая часть -->
    <summary>
        <band height="50">
            <line>
                <reportElement x="0" y="0" width="555" height="1"/>
            </line>
            <textField>
                <reportElement x="0" y="10" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Всего устройств: " + $V{REPORT_COUNT}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>